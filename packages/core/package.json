{
  "name": "@crosstown/core",
  "version": "1.1.1",
  "description": "Core library for Nostr-based ILP peer discovery and SPSP",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./nip34": {
      "types": "./dist/nip34/index.d.ts",
      "import": "./dist/nip34/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "nostr",
    "interledger",
    "ilp",
    "spsp"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ALLiDoizCode/crosstown.git",
    "directory": "packages/core"
  },
  "author": "ALLiDoizCode",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ardrive/turbo-sdk": "^1.21.0",
    "arweave": "^1.15.5",
    "nostr-tools": "^2.20.0",
    "simple-git": "^3.31.1",
    "ws": "^8.18.0"
  },
  "peerDependencies": {
    "@crosstown/connector": ">=1.2.0"
  },
  "peerDependenciesMeta": {
    "@crosstown/connector": {
      "optional": true
    }
  },
  "devDependencies": {
    "@crosstown/relay": "workspace:*",
    "@types/ws": "^8.5.10"
  }
}
