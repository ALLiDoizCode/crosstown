# Crosstown + Agent-Runtime Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Node Identity (Required)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Unique identifier for this node
NODE_ID=my-crosstown-node

# Nostr secret key (64-character lowercase hex)
# Generate with: openssl rand -hex 32
NOSTR_SECRET_KEY=

# ILP address for this node (must start with "g.")
ILP_ADDRESS=g.crosstown.my-node

# BTP WebSocket endpoint for peer connections
BTP_ENDPOINT=ws://my-crosstown-node:3000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Pricing Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Base price per byte for event storage (default: 10)
BASE_PRICE_PER_BYTE=10

# Minimum price for SPSP requests (default: 5, lower than regular events)
SPSP_MIN_PRICE=5

# Asset code (default: USD)
ASSET_CODE=USD

# Asset scale (default: 6 for micro-USD)
ASSET_SCALE=6

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Bootstrap & Discovery
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Enable ArDrive peer discovery (default: true)
ARDRIVE_ENABLED=true

# Additional known peers (JSON array, optional)
# Example:
# ADDITIONAL_PEERS=[{"pubkey":"abc123...","ilpAddress":"g.peer1","btpEndpoint":"ws://peer1:3000","relay":"wss://relay.example.com"}]

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Settlement Configuration (Optional - for payment channels)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Supported blockchain networks (comma-separated chain identifiers)
# Format: "protocol:network:chainId"
# Examples: "evm:base:8453", "evm:polygon:137", "evm:ethereum:1"
# SUPPORTED_CHAINS=evm:base:8453,evm:polygon:137

# Settlement addresses (one per chain)
# Format: SETTLEMENT_ADDRESS_{PROTOCOL}_{NETWORK}_{CHAINID}
# SETTLEMENT_ADDRESS_EVM_BASE_8453=0xYourWalletAddress...
# SETTLEMENT_ADDRESS_EVM_POLYGON_137=0xYourWalletAddress...

# Preferred tokens per chain (optional)
# PREFERRED_TOKEN_EVM_BASE_8453=USDC
# PREFERRED_TOKEN_EVM_POLYGON_137=USDC

# Token network contract addresses (optional)
# TOKEN_NETWORK_EVM_BASE_8453=0xContractAddress...
# TOKEN_NETWORK_EVM_POLYGON_137=0xContractAddress...

# Settlement timeout in seconds (default: 86400 = 24 hours)
# SETTLEMENT_TIMEOUT=86400

# Initial deposit amount for new payment channels (optional)
# INITIAL_DEPOSIT=1000000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Owner Configuration (Optional)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 64-character hex pubkey - events signed by this key bypass payment requirements
# Useful for administrative events or system messages
# OWNER_PUBKEY=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# TigerBeetle Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# TigerBeetle cluster ID (default: 0)
TIGERBEETLE_CLUSTER_ID=0

# TigerBeetle replica count (default: 1 for single-node)
TIGERBEETLE_REPLICA_COUNT=1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Logging
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Log level for agent-runtime (debug, info, warn, error)
LOG_LEVEL=info
