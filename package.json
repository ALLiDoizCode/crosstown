{
  "name": "agent-society",
  "version": "0.1.0",
  "private": true,
  "description": "Nostr-based peer discovery and SPSP for Interledger agents",
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\"",
    "demo:ilp-gated-relay": "tsx packages/examples/src/ilp-gated-relay-demo/index.ts"
  },
  "keywords": [
    "nostr",
    "interledger",
    "ilp",
    "spsp",
    "payment",
    "agent",
    "nip-02",
    "social-graph"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  }
}
